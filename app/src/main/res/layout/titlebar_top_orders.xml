<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTitlebarStyle"
    android:background="@color/titlebar_color">

    <ImageButton
        style="@style/TitlebarButtonStyle"
        android:id="@+id/btn_top_orders_back"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/back_white" />

    <TextView
        style="@style/TitlebarTextStyle"
        android:id="@+id/tex_top_orders_item"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/btn_top_orders_back"
        android:layout_centerVertical="true"
        android:textColor="#ffffff" />

    <Spinner
        style="@style/common_spinner"
        android:id="@+id/spinner_top_order"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_top_orders_back"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent" />

    <ImageButton
        style="@style/TitlebarButtonStyle"
        android:id="@+id/btn_top_orders_3"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:src="@drawable/back_white" />

    <ImageButton
        style="@style/TitlebarButtonStyle"
        android:id="@+id/btn_top_orders_2"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/btn_top_orders_3"
        android:src="@drawable/back_white" />

    <ImageButton
        style="@style/TitlebarButtonStyle"
        android:id="@+id/btn_top_orders_1"
        android:visibility="invisible"
        android:layout_toLeftOf="@+id/btn_top_orders_2"
        android:src="@drawable/back_white" />

    <TextView
        style="@style/TitlebarTextStyle"
        android:id="@+id/top_orders_right_tv2"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/top_orders_right_tv"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:textColor="#ffffff" />

    <TextView
        style="@style/TitlebarTextStyle"
        android:id="@+id/top_orders_right_tv"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:textColor="#ffffff" />
</RelativeLayout>
