<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kingdee.ah.pda.ui.view.TitleTopOrdersView
        android:id="@+id/purchase_warehousing_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/titlebar_color"
                android:text="基本信息" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单据类型:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fbillTypeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:focusableInTouchMode="false"
                            android:focusable="false"
                            android:ellipsize="end"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="采购组织:" />


                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_Purchasing_organization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收料组织:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_Receiving_organization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收料仓库:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fstockDeptName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收料日期:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="供应商:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fsupplierName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/titlebar_color"
                android:text="供应商信息" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="供货方:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fSupplier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结算方:" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fParty_settlement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款方" />

                        <EditText
                            style="@style/mine_fragment"
                            android:id="@+id/tv_fPayee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:drawableRight="@drawable/ic_sanjiao1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16dp"
                    android:textColor="@color/titlebar_color"
                    android:text="明细信息" />
                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_scan_blu" />
            </RelativeLayout>

            <com.bin.david.form.core.SmartTable
                android:id="@+id/add_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="400dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_blue"
            android:textColor="@color/white"
            android:text="保存入库" />
    </LinearLayout>
</LinearLayout>
