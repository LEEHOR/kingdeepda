<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_marginTopPercent="25%w">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_login_bg" />
    </RelativeLayout>

    <EditText
        android:id="@+id/tv_userName"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_corner"
        android:hint="用户名"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textSize="@dimen/text_size"
        app:layout_widthPercent="70%w" />

    <EditText
        android:id="@+id/tv_password"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_corner"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textSize="@dimen/text_size"
        app:layout_widthPercent="70%w" />

    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:text="忘记密码？"
        android:textSize="@dimen/text_size"
        android:visibility="gone"
        app:layout_marginRightPercent="20%w" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_select"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        app:layout_widthPercent="70%w" />

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:text="立即注册"
        android:textSize="@dimen/text_size"
        android:visibility="gone"
        app:layout_widthPercent="60%w" />
    <EditText
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_corner"
        android:imeOptions="actionDone"
        android:inputType="textUri"
        android:digits="0123456789.:"
        android:hint="请输入IP地址"
        android:paddingLeft="10dp"
        android:textSize="@dimen/text_size"
        android:visibility="invisible"
        app:layout_widthPercent="70%w" />
    <Button
        android:id="@+id/btn_ipChange"
        android:text="设置IP地址"
        android:background="@drawable/btn_select"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.zhy.android.percent.support.PercentLinearLayout>
