<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kingdee.ah.pda.ui.view.TitleTopOrdersView
        android:id="@+id/material_list_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/mine_fragment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="基本信息" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单据编号:" />

                    <EditText
                        android:id="@+id/tv_fbillNo"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品编码:" />

                    <EditText
                        android:id="@+id/tv_fmaterialNumber"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品名称:" />

                    <EditText
                        android:id="@+id/tv_fmaterialName"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格型号:" />

                    <EditText
                        android:id="@+id/tv_fmaterialSpecification"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOM版本:" />

                    <EditText
                        android:id="@+id/tv_fbomnumber"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产组织:" />

                    <EditText
                        android:id="@+id/tv_fprdOrgName"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产车间:" />

                    <EditText
                        android:id="@+id/tv_fworkshopName"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位:" />

                    <EditText
                        android:id="@+id/tv_funitName"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产订单编号:" />
                    <EditText
                        android:id="@+id/tv_fmobillNO"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/mine_fragment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单据状态:" />
                    <EditText
                        android:id="@+id/tv_fdocumentStatus"
                        style="@style/mine_fragment"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            style="@style/mine_fragment4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="子项明细" />

        <com.bin.david.form.core.SmartTable
            android:id="@+id/material_list_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="400dp" />
    </LinearLayout>
</ScrollView>


</LinearLayout>
