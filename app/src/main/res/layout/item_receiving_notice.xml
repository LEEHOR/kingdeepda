<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/receiving_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/receiving_1" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/receiving_tv1"
                tool:text="382121390" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/actions_background_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_2" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_supplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="2020-3-15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_1" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_fbillType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="标准收料单" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_6" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_fbusinessType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_3" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_fstockOrgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_4" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_fdemandOrgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_5" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_fpurOrgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_2" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_freceiveDeptName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/mine_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receiving_3_7" />

            <TextView
                style="@style/mine_fragment"
                android:id="@+id/tv_receiving_fsupplierName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                style="@style/mine_fragment2"
                android:id="@+id/receiving_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/receiving_purchase_warehousing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/btn_bg_white"
                android:text="@string/receiving_5" />

            <TextView
                style="@style/mine_fragment2"
                android:id="@+id/receiving_purchase_warehousing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintLeft_toRightOf="@id/receiving_detail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/btn_bg_white"
                android:text="@string/receiving_6" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
