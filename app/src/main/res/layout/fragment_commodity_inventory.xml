<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/commodity_inventory_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="销售统计"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commodity_inventory_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="7天"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="commodity_inventory_tv1,commodity_inventory_tv2"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintRight_toRightOf="@id/guideline2" />

    <TextView
        android:id="@+id/commodity_inventory_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="销售统计"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/barrier1" />
    <TextView
        android:id="@+id/commodity_inventory_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7天"
        android:layout_marginRight="20dp"
       app:layout_constraintRight_toLeftOf="@+id/commodity_inventory_tv4"
        app:layout_constraintTop_toBottomOf="@+id/barrier1" />
    <TextView
        android:id="@+id/commodity_inventory_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7天"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/barrier1" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="commodity_inventory_tv3,commodity_inventory_tv5"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintRight_toRightOf="@id/guideline2" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/ct_commodity_statistics"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/barrier2"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/commodity_inventory_tv6"
            android:text="本日储量"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/commodity_inventory_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="本日储量"
            app:layout_constraintTop_toTopOf="@+id/commodity_inventory_tv6"
            app:layout_constraintBottom_toBottomOf="@+id/commodity_inventory_tv6"
            app:layout_constraintLeft_toRightOf="@+id/commodity_inventory_tv6"
           app:layout_constraintRight_toLeftOf="@+id/commodity_inventory_tv8"
            android:id="@+id/commodity_inventory_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="本日储量"
            android:id="@+id/commodity_inventory_tv8"
            app:layout_constraintLeft_toRightOf="@+id/commodity_inventory_tv7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/commodity_inventory_tv6"
            app:layout_constraintBottom_toBottomOf="@+id/commodity_inventory_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.constraint.Barrier
            android:id="@+id/barrier3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="commodity_inventory_tv6,commodity_inventory_tv7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/barrier3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:maxHeight="150dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Barrier
        android:id="@+id/barrier4"
       app:barrierDirection="bottom"
        app:constraint_referenced_ids="ct_commodity_statistics"
        app:layout_constraintLeft_toLeftOf="@+id/guideline1"
        app:layout_constraintRight_toRightOf="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ct_customer_statistics"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/barrier4"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:id="@+id/commodity_inventory_tv9"
            android:text="本日储量"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/commodity_inventory_tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="本日储量"
            app:layout_constraintTop_toTopOf="@+id/commodity_inventory_tv9"
            app:layout_constraintBottom_toBottomOf="@+id/commodity_inventory_tv9"
            app:layout_constraintLeft_toRightOf="@+id/commodity_inventory_tv9"
            app:layout_constraintRight_toLeftOf="@+id/commodity_inventory_tv11"
            android:id="@+id/commodity_inventory_tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="本日储量"
            android:id="@+id/commodity_inventory_tv11"
            app:layout_constraintLeft_toRightOf="@+id/commodity_inventory_tv10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/commodity_inventory_tv9"
            app:layout_constraintBottom_toBottomOf="@+id/commodity_inventory_tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.constraint.Barrier
            android:id="@+id/barrier5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="commodity_inventory_tv9,commodity_inventory_tv10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/barrier5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:maxHeight="150dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>