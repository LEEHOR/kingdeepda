<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kingdee.ah.pda.ui.view.TitleTopOrdersView
        android:id="@+id/processDetail_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mine_fragment4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单据编号:" />

                        <EditText
                            android:id="@+id/tv_billNo"
                            style="@style/mine_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加工组织:" />

                        <EditText
                            android:id="@+id/tv_prdOrgName"
                            style="@style/mine_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:inputType="textNoSuggestions"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单据类型:" />

                        <EditText
                            android:id="@+id/tv_billTypeName"
                            style="@style/mine_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:inputType="textNoSuggestions"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单据日期:" />

                        <EditText
                            android:id="@+id/tv_date"
                            style="@style/mine_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:inputType="textNoSuggestions"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:singleLine="true" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/mine_fragment4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="汇总" />

                <com.bin.david.form.core.SmartTable
                    android:id="@+id/process_detail_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="400dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
