<!--    表格表头-->
    <style name="tab_top">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
    </style>

<!--   dialog样式 全屏  最主要就是这句 windowIsFloating = false -->
    <style name="DialogFullScreen" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


<!--dialog弹窗-->
    <style name="pop_animation">
        <item name="android:windowEnterAnimation">@anim/trm_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_pop_exit</item>
    </style>
    <style name="top_in_out_animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
    <style name="bottom_in_out_animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
    <style name="center_in_out_Animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_center_in</item>
        <item name="android:windowExitAnimation">@anim/push_center_out</item>
    </style>
<!--    tab样式-->
    <style name="MyTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
